{
  "name": "event-system",
  "version": "1.0.0",
  "description": "POC of a event system based on command pattern",
  "main": "index.mjs",
  "scripts": {
    "test": "mocha **/*.test.js",
    "lint": "eslint src --color",
    "build": "babel src --out-dir dist --ignore --source-maps node_modules",
    "watch": "babel src --out-dir dist --ignore --source-maps --watch node_modules",
    "debug": "node --nolazy --inspect --inspect-brk=9969 index.js",
    "p": "prettier --write 'src/**/*.js'",
    "p:w": "onchange 'src/**/*.js' -- prettier --write {{changed}}"
  },
  "author": "Helton Costa",
  "license": "MIT",
  "dependencies": {
    "es6-enum": "^1.1.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "eslint": "^5.9.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.3.0",
    "eslint-config-standard": "^12.0.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-node": "^8.0.0",
    "eslint-plugin-prettier": "^3.0.0",
    "eslint-plugin-promise": "^4.0.1",
    "eslint-plugin-standard": "^4.0.0",
    "mocha": "^5.2.0",
    "onchange": "^5.1.0",
    "prettier": "^1.15.2"
  }
}
